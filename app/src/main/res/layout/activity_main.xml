<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:maxWidth="28dp"
        android:maxHeight="28dp"
        android:scaleType="fitCenter"
        android:src="@drawable/news_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/news_24_app_title"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toEndOf="@id/img_news"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:contentDescription="noti_bell"
        android:id="@+id/noti_bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:maxWidth="28dp"
        android:maxHeight="28dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/noti_yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- recycler view thứ nhất: RecyclerView của rv_item (là RadioButton)
    Cái này là cho dãy nút "topic" (worlds, sports, ...)
    nằm ngang cho UI, lưu ý phải code để chọn được duy nhất 1 RadioButton
    đổi màu, mặc định là bấm chọn là nút đổi màu luôn (không đổi lại được)
    nên phải code lại.
    Tham khảo code: https://www.youtube.com/watch?v=1FtZsgQL03w
    Ngoài đó còn phải code chọn 1 nút radio mặc định cho giống UI tham khảo
    lúc mới khởi động app.
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_recycler1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_news" />

    <!-- recycler view thứ 2: Fragment gồm RecyclerView của mấy cái news_feed_item
    Cái này thì code như bth, nhưng lưu ý là cái này là Fragment nên phải code
    trong NewsFeed trong phần backend-->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.tqb.newsreader.NewsFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_recycler1"
        tools:layout="@layout/fragment_news_feed" />

    <!-- NavigationBottom: Phần này để đổi Fragment cho từng UI, còn phải làm
    Search, Bookmarks, Settings-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>