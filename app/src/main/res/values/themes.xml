<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsReader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Switch" parent="Theme.AppCompat.Light">
        <!-- active track color (30% transparency) -->
        <item name="colorControlActivated"> @color/dark_grey
        </item>


        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal"> @color/white
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/dark_grey
        </item>

    </style>

    <!-- Ảnh bo góc cho ShapeableImageView -->
    <style name="rounded_corner">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="news_feed_des_text">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="news_feed_title_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottom_nav_color">
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="topic_btn_color">
        <item name="android:background">
            @drawable/btn_states
        </item>

        <item name="android:textColor">
            @drawable/btn_states_text
        </item>
    </style>


</resources>