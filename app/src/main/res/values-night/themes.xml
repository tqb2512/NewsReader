<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsReader" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">#1C1C1C</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#1C1C1C</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="news_feed_des_text">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="news_feed_title_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bottom_nav_color">
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="topic_btn_color">
        <item name="android:background">
            @drawable/btn_states_dark
        </item>

        <item name="android:textColor">
            @drawable/btn_states_text_dark
        </item>
    </style>


</resources>